<div class="card mb-4">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <%= image_tag(customer.image.attached? ? customer.image : 'https://via.placeholder.com/64x64', 
                       class: "is-rounded", alt: customer.full_name) %>
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4"><%= customer.full_name %></p>
        <p class="subtitle is-6">
          <strong>Phone:</strong> <%= customer.phone_number %><br>
          <% if customer.email_address.present? %>
            <strong>Email:</strong> <%= customer.email_address %><br>
          <% else %>
            <strong>Email:</strong> <span class="has-text-danger">Missing</span><br>
          <% end %>
        </p>
      </div>
    </div>
    <% if customer.notes.present? %>
      <div class="content">
        <strong>Notes:</strong><br>
        <%= simple_format(customer.notes) %>
      </div>
    <% end %>
  </div>
</div>
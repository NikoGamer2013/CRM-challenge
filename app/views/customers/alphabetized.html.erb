<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">Customers (Alphabetized)</h1>
      <h2 class="subtitle">Sorted by name A-Z</h2>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <div class="buttons">
            <%= link_to "All Customers", root_path, class: "button is-primary" %>
            <%= link_to "Missing Email", customers_missing_email_path, class: "button is-warning" %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="columns is-multiline">
      <% @customers.each do |customer| %>
        <div class="column is-one-third">
          <%= render 'customer', customer: customer %>
        </div>
      <% end %>
    </div>
  </div>
</section>